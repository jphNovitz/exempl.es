<article class="w-full h-full border border-black/10 dark:border-clear/10 rounded-xl">
    <div style="background-image: url('{{ site.image }}')"
         class="w-full aspect-video bg-no-repeat bg-center bg-cover p-4 border-4 rounded-xl border-dark dark:border-clear relative">
        {% if site.repo is not empty %}
            <div class="absolute bottom-4 right-4 bg-clear w-9 p-1 rounded-md">
                <a href="{{ site.repo }}">
                    <img src="{{ asset('images/logos/github-mark.png') }}"
                         alt="Repository de {{ site.title }} sur Github | Laissez une étoilé "
                         title="Repository de {{ site.title }} sur Github | Laissez une étoilé ">
                </a>
            </div>
        {% endif %}
    </div>
    <div class="px-4 py-8">
        <h2 class="font-black  text-secondary">
            <a href="{{ path('app_site_show', {'slug': site.slug}) }}" title="{{ site.title }} |  {{ category }}">{{ site.title }}</a>
        </h2>
        <p class="font-[14px]">{{ site.description }}</p>
        <h6 class="pt-2">
            {% for tag in site.tags %}
                #{{ tag.name }}
            {% endfor %}
        </h6>

    </div>

</article>